<h1>Posts</h1>

<ul class="posts">

  <% @posts.each do |post| %>

  <div class="title">
    <li>
      <%= link_to post.title, post_link(post) %>
    </li>
  </div>

  <div class="tagline" title="<%= post.created_at %>">
    Submitted <%= time_ago_in_words post.created_at %> ago
  </div>

  <% end %>

</ul>

<!DOCTYPE html>
<html>
<head>
  <title>Bluit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container wrap">
    <div class="row">
      <div class="col-xs-12">
        <nav id="categories">
          <div class="dropdown">
          <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
           <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
            <% categories.each do |c| -%>
              <li role="presentation"><%= link_to c.name, category_path(c), role: 'menuitem', tabindex: '-1' %></li>
            <% end -%>
          </ul>
        </div>
        <span class="separator">|</span>
          <ul class="category-links">
            <% categories.each_with_index do |c, i| %>
              <li>
                <% if i > 0 %>
                  <span class="separator">-</span>
                <% end %>
                <%= link_to c.name, category_path(c) %>
              </li>
            <% end %>
          </ul>
        </nav>
      <header><%= link_to 'BLU.it by ESH', root_path %></header>
      <div id="session_actions">
        <% if user_signed_in? %>
        <%= link_to current_user.username, edit_user_registration_path(current_user) %>
        <span class="separator">|</span>
        <%= link_to 'logout', destroy_user_session_path, method: :delete %>
        <% else %>
        want to join? <%= link_to 'login', new_user_session_path %>
        or <%= link_to 'register', new_user_registration_path %>
        <% end %>
      </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-8">
          <main>
            <%= flash_messages(flash) unless flash.empty? %>
              <!-- BEGIN main content -->
              <%= yield %>
              <!-- END main content -->
          </main>
        </div>
        <div class="col-xs-4">
          <nav id="sidebar">
            <% if user_signed_in? %>
              <%= link_to '+ Link Post', new_post_path %>
              <%= link_to '+ Text Post', new_post_path(post_type: :text) %>
              <%= link_to '+ Category', new_category_path %>
              <div>
                <%= yield :sidebar %>
              </div>
              <% else %>
                <%= yield :sidebar %>
              <% end %>
          </nav>
        </div>
      </div>
    </div>
<div class="push"></div>
  </div>
  <footer>
    Copyright, ya animals. TWENTY FIFTEEN.
  </footer>

  </body>
</html>
